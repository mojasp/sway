#setup external monitor
bindsym $mod+Shift+s mode "$monitor_setup"
set $monitor_setup setup external  monitors: (w)ork, (h)ome, (o)ne, (c)hill, (r)eset
mode "$monitor_setup" {
    bindsym w exec --no-startup-id ~/.local/scripts/mon_setup.sh work, mode "default"
    bindsym h exec --no-startup-id ~/.local/scripts/mon_setup.sh home, mode "default"
    bindsym o exec --no-startup-id ~/.local/scripts/mon_setup.sh one, mode "default"
    bindsym c exec --no-startup-id ~/.local/scripts/mon_setup.sh chill, mode "default"

    bindsym r exec --no-startup-id ~/.local/scripts/mon_setup.sh reset, mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#Split Monitor
bindsym $mod+s mode "$mode_monitor_split"
set $mode_monitor_split Split Monitor: (d)efault, (h)alf, (s)mall, A(4), A(3), (v)ert, (r)eset
mode "$mode_monitor_split" {
    bindsym d exec --no-startup-id ~/.local/scripts/mon_ws.sh default, mode "default"
    bindsym h exec --no-startup-id ~/.local/scripts/mon_ws.sh half, mode "default"
    bindsym s exec --no-startup-id ~/.local/scripts/mon_ws.sh small, mode "default"
    bindsym 3 exec --no-startup-id ~/.local/scripts/mon_ws.sh a3, mode "default"
    bindsym 4 exec --no-startup-id ~/.local/scripts/mon_ws.sh a4, mode "default"
    bindsym v exec --no-startup-id ~/.local/scripts/mon_vert.sh third, mode "default"

    bindsym r exec --no-startup-id ~/.local/scripts/mon_ws.sh && mon_vert.sh, mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# redshift modes
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_redshift pkill -9 redshift;
bindsym $mod+r mode "$mode_redshift"
mode "$mode_redshift" {
    bindsym a exec "$kill_redshift redshift -P -t 5000:4000", mode "default"
    bindsym r exec "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec "$kill_redshift redshift -P -O 2500 -b 0.75", mode "default"
    bindsym 3 exec "$kill_redshift redshift -P -O 3000", mode "default"
    bindsym 4 exec "$kill_redshift redshift -P -O 4000", mode "default"
    bindsym 5 exec "$kill_redshift redshift -P -O 5000", mode "default"

    # exit mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


